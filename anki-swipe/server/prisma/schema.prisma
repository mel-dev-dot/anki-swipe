generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String         @id @default(uuid())
  email     String?        @unique
  passwordHash String?
  name      String?
  avatarUrl String?
  planTier  String?
  billingCycle String?
  planStatus String?
  hasPaymentMethod Boolean @default(false)
  stripeCustomerId String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  providers AuthProvider[]
  reviewCards ReviewCard[]
  learningProgress LearningProgress?
}

model AuthProvider {
  id             String   @id @default(uuid())
  provider       String
  providerUserId String
  email          String?
  createdAt      DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([provider, providerUserId])
}

model Deck {
  id     String  @id
  label  String
  groups Group[]
  cards  Card[]
}

model Group {
  id     String @id
  key    String
  label  String
  deckId String
  deck   Deck   @relation(fields: [deckId], references: [id])
  cards  Card[]
}

model Card {
  id       String  @id
  deckId   String
  groupId  String
  groupKey String
  script   String
  romaji   String?
  meaning  String?
  onyomi   String?
  kunyomi  String?
  level    String?
  order    Int?

  deck   Deck  @relation(fields: [deckId], references: [id])
  group  Group @relation(fields: [groupId], references: [id])
  reviews ReviewCard[]
  examples SentenceExample[]
  enrichment KanjiEnrichment?
}

model SentenceExample {
  id             String @id
  cardId         String
  sentence       String
  reading        String
  readingReason  String?
  romaji         String
  translation    String
  breakdown      Json?
  grammarNotes   Json?

  card Card @relation(fields: [cardId], references: [id])
}

model LearningProgress {
  id        String @id @default(uuid())
  userId    String? @unique
  nextOrder Int     @default(0)

  user User? @relation(fields: [userId], references: [id])
}

model ReviewCard {
  id            String   @id @default(uuid())
  userId        String?
  cardId        String
  deck          String
  group         String
  dueAt         DateTime
  intervalDays  Int      @default(0)
  ease          Float    @default(2.5)
  reps          Int      @default(0)
  lapses        Int      @default(0)
  intervalIndex Int
  seen          Int
  correct       Int
  wrong         Int
  learningStep  Int      @default(0)
  lastCorrect   Boolean  @default(true)
  lastAnsweredAt DateTime @default(now())
  lastReviewedAt DateTime @default(now())
  lastAnswerMs  Int
  avgAnswerMs   Int

  card Card @relation(fields: [cardId], references: [id])
  user User? @relation(fields: [userId], references: [id])

  @@unique([userId, cardId])
}

model KanjiEnrichment {
  id                String   @id
  cardId            String   @unique
  source            String
  model             String?
  generatedAt       DateTime @default(now())
  sentence          String
  reading           String
  readingReason     String?
  romaji            String
  translation       String
  breakdown         Json?
  grammarNotes      Json?
  difficultyScore   Int?
  difficultyNotes   String?

  card Card @relation(fields: [cardId], references: [id])
}
